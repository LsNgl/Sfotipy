@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz official
// animacion(parametro)
//   -webkit-animation parametro
//   -moz-animation parametro
//   -o-animation parametro
//   -ms-animation parametro
//   animation parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0
gris_mas_claro2 = #D0D2D3
azul = #3D5A98
celeste = #5FA9DD

body
  font-family 'Varela Round', sans-serif
  font-size 16px
a
  text-decoration none
figure
  margin 0
img
  vertical-align top
ul
  margin 0
  padding 0
//buttons
.azul
  background azul
.celeste
  background celeste
.button-menu
  color gris_oscuro
  left .5em
  margin-top -10px
  position absolute
  top 50%
.buttons-login
  margin 0.5em 0
  //padding 0.8em 0
  border 1px solid transparent
  border-radius 0.3em
  width 17em
  height 3.25em
  position relative
  cursor pointer
  .button-text
    color white
    font-size 1em
    position absolute
    left 3em
    padding 1em 1em
  .button-login
    color white
    font-size 1.5em
    top 0.3em
    padding 0.2em 0.5em
    position absolute
//index
.social-login
  position relative
.logo-login
  position absolute
  top 4.2em
  left 1.5em
  right 1.5em
.login-tittle
  position absolute
  top 6em
  left 0
  bottom 0
.tittle-login
  text-align center
  color white
  font-size 1.5em
.border-right-gris-oscuro
  border-right 1px solid gris_oscuro
.border-right-gris-claro
  border-right 1px solid gris_claro
.login-link
  display inline-block
  margin 0.5em 0
  text-align center
  width 9.8em
  padding 0.5em 0
  a
    color gris_claro
    text-decoration underline
    font-size 0.9em
  &:nth-child(even)
    border-right 1px solid gris_claro
.info-box
  margin-top 1em
.info-text
  width 17em
  margin 1em auto
  padding-bottom 0.5em
  p
    margin-bottom 0.5em
.info-title
  font-size 1.2em

//oocss containers
.footer
  background gris_oscuro
  color white
.login
  &.small
    width 20em
    margin 0 auto
// .login-bg
//   img
//     object-fit cover
//     width 100%
//     height 400px
.dark-gray
  color gris_oscuro
.gray
  color gris_claro
.container
  font-size 0
  padding 1.4rem
  text-align center
.action
  color white
  font-size 1.2em
  margin-right .5em
  &:last-child
    margin-right 0
  &.gray
    color gris_claro
.actions
  position absolute
  bottom 0
  left 0
  right 0
  background rgba(black,.3)
.border-top
  border-top 1px solid gris_claro
.border-bottom
  border-bottom 1px solid gris_claro
.border-bottom-light
  border-bottom 1px solid gris_mas_claro2
.name
  color gris_oscuro
.menu
  display none
.relative
  position relative
.padding
  padding 1em
.padding-tb
  padding 1em 0
.left
  float left
.right
  float right
.wrap
  width 1000px
.round
  border-radius 50%
  overflow hidden
.author
  color gris_claro
.center-block
  margin 0 auto
.center-text
  text-align center
.right-text
  text-align right
.progress
  margin 1em 0
  position relative
  .min
  .max
    font-size .8em
    position absolute
    top -5px
  .min
    left 0
  .max
    right 0
  .total
    background gris_claro
    border-radius 5px
    height 5px
    width 75%
    margin 0 auto
  .state
    background rojo
    border-radius 5px
    height 5px
    position relative
    width 30%
    animation 10s state infinite linear
  .circle
    background gris_oscuro
    border-radius 50%
    height 10px
    position absolute
    right 0
    top -2px
    width 10px
    animation 1s circle infinite
@keyframes state
  0%
    width 0
  100%
    width 100%
@keyframes circle
  0%
    transform scale(1)
  100%
    transform scale(2)
    opacity 0
.header
  height 3.5em
  // a
  //   display none
  .title
    font-size 1.1em
    line-height 3.5em
    margin 0
    text-align center
.song
  display inline-block
  font-size 1rem
  margin-bottom 1em
  margin-right 1em
  text-align left
  width 8rem
  &:nth-child(even)
    margin-right 0
  p
    margin .5em 0
.playing
  &.small
    width 20em
    margin 0 auto
.input
  border 1px solid gris_claro
  height 2.5em
  border-radius 5px
  padding 0 1em 0 2em
.search-icon
  position absolute
  left .5em
  top .8em
  color gris_claro
.close-icon
  color gris_claro
  font-size 1.2em
  position absolute
  right .5em
  top .5em
.playlist
  display none
  width 22em
  padding 0 2em
  border-left 1px solid gris_claro
  .list
    list-style none
  .item
    padding 1em 0
  .action
    font-size .8em
.isotipo
  width 122px
.isotipo-login
  width 244px
  margin 0 auto
.logo
  padding 1.3em 0
  overflow hidden
  background white
  display none
.avatar
  width 38px
  height 38px
.username
  color gris_claro
  position relative
  top 9px
  margin-left .5em
  &:after
    border-left 7px solid transparent
    border-right 7px solid transparent
    border-top 9px solid gris_claro
    content ""
    display inline-block
    margin-left .4em

@media screen and (min-width:480px)
  .song
    &:nth-child(even)
      margin-right 1em
  .image
    img
      width 100%
      height auto
  .playing
    &.medium
      width auto

@media screen and (min-width:1000px)
  body
    background gris_mas_claro
  .button-menu
    display none
  .playing
    padding-top 1.3em
    &.large
      margin 0 auto
      width 62.5em
      overflow hidden
  .menu
    display block
    background gris_mas_claro
    overflow hidden
    border-top 1px solid gris_claro
    .item
      float left
      list-style none
      a
        color gris_oscuro
        text-transform uppercase
        cursor pointer
        padding 1em
        display block
        border-top 5px solid transparent
        &:hover
          border-top 5px solid gris_claro
  .music
    width 32.5em
    float left
    .description
      display none

  .header
    height auto
    border none
    .title
      display none
  .logo
  .playlist
    display block
